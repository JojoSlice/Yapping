@page
@model miniReddit.Pages.ProfilePageModel
@{
    ViewData["Title"] = "Profile page";
    var ProfileImg = Model.User.ProfileImg;
}
<body>
    <div>
        <img class="ProfilePageImg" src="@ProfileImg" />
        <input type="button" value="Change" />
    </div>
    <div>
        <ul>
            <li>
                <label asp-for="User.Username"></label>
            </li>
            <li>
                <label asp-for="User.Email"></label>
                <input type="button" value="Change" />
            </li>
            <li>
                <label>Amout of posts</label>
                <input type="button" value="See history" />
            </li>
            <li>
                <label>Amout of comments</label>
                <input type="button" value="See history" />
            </li>
        </ul>
    </div>
    <div class="ChangePicture">
        <div class="ChangeContainer">
            <form method="post" enctype="multipart/form-data">
                <img class="ProfilePageImg" src="@ProfileImg" />
                <p>Upload picture. Only .png or .jpg</p>
                <input type="file" asp-for="ProfilePic" />
                <span asp-validation-for="ProfilePic"></span>
                <input type="submit" value="Upload" />
            </form>
        </div>
    </div>
</body>
